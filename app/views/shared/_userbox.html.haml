- type ||= @type || :nil
.ui.special.cards
  .card
    .dimmable.image
      .ui.dimmer
        .content
          .center
            - unless user.bio.blank?
              %p.inverted= markdown user.bio
            .ui.mini.statistic.inverted
              .value= user.asked_count
              .label Questions
            .ui.mini.statistic.inverted
              .value= user.answered_count
              .label Answers
            = render 'user/actions', user: user, type: type
      %img{src: gravatar_url(user)}
    .content
      - if user.display_name.blank?
        %a.header{href: show_user_profile_path(user.screen_name)}
          = user.screen_name
      - else
        %a.header{href: show_user_profile_path(user.screen_name)}
          = user.display_name
        .meta= user.screen_name