- type ||= @type || :nil
.ui.special.cards
  .card
    .dimmable.image
      .ui.dimmer
        .content
          .center
            = render 'user/actions', user: user, type: type
      %img{src: gravatar_url(user)}
    .content
      - if user.display_name.blank?
        %a.header{href: show_user_profile_path(user.screen_name)}
          = user.screen_name
      - else
        %a.header{href: show_user_profile_path(user.screen_name)}
          = user.display_name
        .meta= user.screen_name

