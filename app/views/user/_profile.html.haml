.ui.top.visible.sidebar.segment.profile
  .ui.page.stackable.grid
    .three.column.stackable.row
      .three.wide.column
        .ui.fluid.rounded.centered.image
          - if @user.following? current_user
            .ui.purple.ribbon.label Follows You
          %img{src: @user.profile_picture.url(:large)}
          - if @user == current_user
            .ui.ribbon.label It's You
      .eight.wide.column
        - if @user.display_name.blank?
          %h2.ui.header
            = @user.screen_name
        - else
          %h2.ui.header
            = @user.display_name
            .sub.header= @user.screen_name
        .ui.labels
          - if @user.admin?
            .ui.horizontal.red.icon.label
              = semantic_icon(:diamond)
              Admin
          - if @user.mod?
            .ui.horizontal.green.icon.label
              = semantic_icon(:users)
              Moderator
          - if @user.supporter? and @user.moderator == false and @user.admin == false
            .ui.horizontal.yellow.icon.label
              = semantic_icon(:star)
              Supporter
          - if @user.blogger? and @user.moderator == false and @user.admin == false
            .ui.horizontal.blue.icon.label
              = semantic_icon(:pencil)
              Blogger
          - if @user.banned?
            .ui.horizontal.icon.label
              = semantic_icon(:ban)
              Banned       

        - unless @user.bio.blank?
          %p= markdown @user.bio
        .ui.horizontal.list
          - unless @user.website.blank?
            .item
              = semantic_icon(:world)
              %a.content{href: @user.website}= @user.display_website
          - unless @user.location.blank?
            .item
              = semantic_icon('location arrow')
              .content= @user.location     

          .item
        = render 'user/actions', user: @user, type: :follower    
      .five.wide.column
        .ui.medium.horizontal.statistic
          .value= @user.follower_count
          .label Followers
        .ui.medium.horizontal.statistic
          .value= @user.friend_count
          .label Following
        .ui.medium.horizontal.statistic
          .value= @user.asked_count
          .label Questions asked
        .ui.medium.horizontal.statistic
          .value= @user.answered_count
          .label Answers given
